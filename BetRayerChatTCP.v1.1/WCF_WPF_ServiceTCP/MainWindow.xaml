<Window x:Class="WCF_WPF_ServiceTCP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WCF_WPF_ServiceTCP"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="300">
    <Grid>

        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Color="LightSlateGray" Offset="0" />
                <GradientStop Color="White" Offset="0.5" />
                <GradientStop Color="LightSlateGray" Offset="0.9" />
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel Orientation="Vertical">
            <Label Height="37" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Top" x:Name="labelTitle"  FontSize="20" >Chat Service</Label>
            <Button Height="30" Width="80" Margin="5"  HorizontalAlignment="Center" x:Name="buttonStart" Click="buttonStart_Click" Background="#FF52C332" FontWeight="Bold" FontSize="14">START</Button>
            <Label Height="28" Margin="10,0,15,45" VerticalAlignment="Bottom" x:Name="labelStatus">Status</Label>
        </StackPanel>



    </Grid>
</Window>
